#!/bin/bash
#
# ingest.files.sh
#
# Will iterate over the desired folder; take all sub folders; and for each kick start the creation of an instruction.

source ../../../config.sh

# Enable share
net use $FLOW2_SHARE

for d in $flow2_share_path/*
do
    for fileSet in $d/*
    do
    	na=$(basename $d)
    	$flow_home/src/main/flow2/ftp.sh $na $fileSet
    done
done
